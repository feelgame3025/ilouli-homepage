# Server Configuration
PORT=4000
JWT_SECRET=your-secret-key-change-in-production

# Database
# SQLite database will be created automatically at ./ilouli.db

# OpenAI API (for Whisper STT and other AI features)
OPENAI_API_KEY=sk-...

# Naver Cloud (optional - for Clova Speech API)
NAVER_CLIENT_ID=your_client_id
NAVER_CLIENT_SECRET=your_client_secret

# Anthropic Claude API (for AI analysis)
ANTHROPIC_API_KEY=sk-ant-...

# Google OAuth (for social login)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Kakao OAuth (for social login)
KAKAO_CLIENT_ID=your_kakao_client_id
KAKAO_CLIENT_SECRET=your_kakao_client_secret

# Google Calendar API
GOOGLE_CALENDAR_CLIENT_ID=your_calendar_client_id
GOOGLE_CALENDAR_CLIENT_SECRET=your_calendar_client_secret
GOOGLE_CALENDAR_REDIRECT_URI=https://api.ilouli.com/api/calendar/oauth/callback
